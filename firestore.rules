rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: check if current user is admin
    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper: check if signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // BOOKINGS — public create, authenticated read, admin update/delete
    match /bookings/{id} {
      allow create: if true;
      allow read: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    // APPLICATIONS — public create, authenticated read, admin update/delete
    match /applications/{id} {
      allow create: if true;
      allow read: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    // USERS — signed-in users can read all; admin can create/update/delete
    match /users/{uid} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); // needed for first-time sign-in profile creation
      allow update, delete: if isAdmin();
    }
  }
}